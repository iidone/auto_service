<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Auto_Service.ViewModels"
        x:Class="Auto_Service.Views.DetailWindow"
        x:DataType="vm:DetailWindowViewModel"
        Title="Детали работы"
        Background="#1B1B1B"
        Width="650"
        Height="750">
    
    <Window.Styles>
        <Style Selector="TextBlock.Header">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="Foreground" Value="#D3D3D3"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style Selector="TextBlock.text">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="Foreground" Value="#D3D3D3"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

    </Window.Styles>
        
    <StackPanel Margin="20" Spacing="10">
        <TextBlock Classes="Header" Text="Информация о клиенте:" FontWeight="Bold"/>
        <TextBlock Classes="text" Text = "{Binding SelectedWork.Client.first_name, StringFormat='Имя: {0}'}"/>
        <TextBlock Classes="text" Text="{Binding SelectedWork.Client.last_name, StringFormat='Фамилия: {0}'}"/>
        <TextBlock Classes="text" Text="{Binding SelectedWork.Client.contact, StringFormat='Номер Телефона: {0}'}"/>
        
        <TextBlock Classes="Header" Text="Автомобиль:" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBlock Classes="text"  Text="{Binding SelectedWork.Client.brand, StringFormat='Марка: {0}'}"/>
        <TextBlock Classes="text" Text="{Binding SelectedWork.Client.series, StringFormat='Модель: {0}'}"/>
        <TextBlock Classes="text" Text = "{Binding SelectedWork.Client.age, StringFormat='Год выпуска: {0}'}"/>
        <TextBlock Classes="text" Text = "{Binding SelectedWork.Client.mileage, StringFormat='Пробег: {0}'}"/>
        <TextBlock Classes="text" Text = "{Binding SelectedWork.Client.vin, StringFormat='VIN: {0}'}"/>

        
        <TextBlock Classes="Header" Text="Техническое обслуживание:" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBlock Classes="text" Text = "{Binding SelectedWork.Client.last_maintenance, StringFormat='Последнее ТО: {0}'}"/>
        <TextBlock Classes="text" Text="{Binding SelectedWork.Maintenance.description, StringFormat='Содержание работ: {0}'}"/>
        <TextBlock Classes="text" Text="{Binding SelectedWork.Maintenance.comment, StringFormat='Комментарий: {0}'}"/>
        <TextBlock Classes="text" Text="{Binding SelectedWork.Maintenance.date, StringFormat='Дата поступления: {0}'}"/>
    </StackPanel>
</Window>
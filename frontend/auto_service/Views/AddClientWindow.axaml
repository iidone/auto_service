<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Auto_Service.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Auto_Service.Views.AddClientWindow"
        x:DataType="vm:AddClientWindowViewModel"
        Width="400"
        SizeToContent="Height"
        Title="Добавление клиента"
        WindowStartupLocation="CenterOwner">
    

    <ScrollViewer Margin="10">
        <StackPanel Spacing="10">
            <TextBlock Text="Персональные данные" FontWeight="Bold"/>
            
            <TextBox Watermark="Имя" Text="{Binding NewClient.first_name}"/>
            <TextBox Watermark="Фамилия" Text="{Binding NewClient.last_name}"/>
            <TextBox Watermark="Телефон" Text="{Binding NewClient.contact}"/>
            
            <TextBlock Text="Данные автомобиля" FontWeight="Bold" Margin="0,10,0,0"/>
            
            <TextBox Watermark="Марка машины" Text="{Binding NewClient.brand}"/>
            <TextBox Watermark="Модель машины" Text="{Binding NewClient.series}"/>
            <TextBox Watermark="Номер машины" Text="{Binding NewClient.number}"/>
            <TextBox Watermark="Пробег (км)" Text="{Binding NewClient.mileage}"/>
            <TextBox Watermark="Год выпуска" Text="{Binding NewClient.age}"/>
            <TextBox Watermark="VIN номер" Text="{Binding NewClient.vin}"/>
            <TextBox Watermark="Последнее посещение" Text = "{Binding NewClient.last_maintenance}"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
                <Button Content="Отмена" Command="{Binding CancelCommand}" Width="100"/>
                <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>